{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block styles %}
{{ parent() }}
    <link href="{{ asset('css/formStyle.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>


{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->



<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}


    <input type="text" id="username" class="fadeIn second" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="login"/>


    <input type="password" id="password" class="fadeIn third" name="_password" required="required" autocomplete="current-password" placeholder="password" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    <input type="submit" id="_submit" class="fadeIn fourth" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>

    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}
