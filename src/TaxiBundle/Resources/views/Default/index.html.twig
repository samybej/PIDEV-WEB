{% extends 'base.html.twig' %}

{% block body %}
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>Liste des résérvations</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Vous pouvez consulter les reservations ici.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>

    <section id="service-page-wrapper" class="section-padding">
        <div class="container">
            <div>

                <table class="table     table-bordered">
                    <thead class="thead-dark">
                    <tr>
                        <th>Distance</th>
                        <th>Depart</th>
                        <th>Arrive</th>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Tarif</th>
                        <th>Etat</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reservation in reservations %}
                        {% if reservation.type|upper == 'Taxi'|upper  %}
                        <tr>
                            <td>{{ reservation.distance }}</td>
                            <td>{{ reservation.depart }}</td>
                            <td>{{ reservation.arrive }}</td>
                            <td>{% if reservation.date %}{{ reservation.date|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ reservation.type }}</td>
                            <td>{{ reservation.tarif }}</td>
                            <td>{{ reservation.etat }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a class="btn btn-success" href="{{ path('reservation_show', { 'id': reservation.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a class="btn btn-warning" href="{{ path('taxi_modifier', { 'id': reservation.id }) }}">edit</a>
                                    </li>

                                </ul>
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <div class="text-center">
                            <a class="btn btn-primary" href="{{ path('ajout_reservation_taxi') }}">Create a new reservation</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </section>
{% endblock %}
