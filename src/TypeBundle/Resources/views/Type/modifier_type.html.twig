{% extends 'base.html.twig' %}
{% block styles %}
    {{ parent() }}
    <link href="{{ asset('css/cssCov.css') }}" rel="stylesheet" />

{% endblock %}
{% block body %}
    <div class="container2">
        <img src="{{ asset('img/covoiturage.jpg') }}" style="width: 100%; height: 140% ;opacity: 0.65">
        <div class="centered">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title  text-center container2">
                            <h2 style="size: 70px">Ajouter des details</h2>
                            <span class="title-line"><i class="fa fa-car"></i></span>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="centered3">
            <div class="book-a-car" >
                {{ form_start(form) }}
                <div class="pickup-location book-item">
                    {{ form_label(form.vitesse," Vitesse Moyenne", { 'label_attr': {'class':'select2'}}) }}
                    {{ form_widget(form.vitesse) }}
                </div>
                <div class="pickup-location book-item">
                    {{ form_label(form.nbrArrets," Nombre d'arrets / Pauses", { 'label_attr': {'class':'select2'}}) }}
                    {{ form_widget(form.nbrArrets) }}
                </div>
                <div class="pickup-location book-item">
                    {{ form_label(form.tmpArret," Temps total d'arrets ", { 'label_attr': {'class':'select2'}}) }}
                    {{ form_widget(form.tmpArret) }}
                </div>


                {{ form_widget(form.Ajouter,  { 'label': 'Modifier' } ) }}

                {{ form_end(form) }}
            </div>
        </div>

    </div>

    </section>
    {{ parent() }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}


{% endblock %}