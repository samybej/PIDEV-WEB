{% extends "back.html.twig" %}
{% block body %}
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">


    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des participants</h3>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline" role="grid">


                <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                    <thead>
                    <tr role="row">
                        <th class="sorting_desc" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 81px;" aria-sort="descending" aria-label="Rendering engine: activate to sort column ascending">ID</th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 167px;" aria-label="Browser: activate to sort column ascending">Nom</th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 110px;" aria-label="Browser: activate to sort column ascending">Prenom</th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 84px;" aria-label="Engine version: activate to sort column ascending">Role</th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 98px;" aria-label="CSS grade: activate to sort column ascending">Sexe</th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 98px;" aria-label="CSS grade: activate to sort column ascending">Note</th>

                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 78px;" aria-label="CSS grade: activate to sort column ascending">Nbre Reclamation</th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 78px;" aria-label="CSS grade: activate to sort column ascending">Telephone</th>
                    </tr>

                    </thead>

                    <tfoot>
                    <tr>
                        <th rowspan="1" colspan="1">ID</th>
                        <th rowspan="1" colspan="1">Nom</th>
                        <th rowspan="1" colspan="1">Prenom</th>
                        <th rowspan="1" colspan="1">Role</th>
                        <th rowspan="1" colspan="1">Sexe</th>
                        <th rowspan="1" colspan="1">Note</th>
                        <th rowspan="1" colspan="1">Nbre Rclamation</th>
                        <th rowspan="1" colspan="1">Telephone</th>
                    </tr>
                    </tfoot>
                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                    <tr class="odd">
                        {% for l in list %}
                    <tr>

                        <td class="  sorting_1">{{ l.idChauffeur.ID }}</td>
                        <td class=" ">{{ l.idChauffeur.nom }}</td>
                        <td class=" ">{{ l.idChauffeur.prenom}}</td>
                        <td class=" ">{{ l.idChauffeur.role }}</td>

                        <td class=" ">{{ l.idChauffeur.sexe }}</td>
                        <td class=" ">{{ l.idChauffeur.note }}</td>
                        <td class=" ">{{ l.idChauffeur.nbreclamation }}</td>

                        <td class=" ">{{ l.idChauffeur.tel}}</td>


                    </tr>


                    {% endfor %}


                    </tr>
                    </tbody>
                </table>

            </div>
        </div><!-- /.box-body -->
    </div>
{% endblock %}