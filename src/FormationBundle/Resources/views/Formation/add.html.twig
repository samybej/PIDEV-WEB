{% extends "VehiculeBundle:Default:index.html.twig" %}
{% block body %}

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Ajouter Formation</h3>
                    </div><!-- /.box-header -->
                    </div><!-- /.box-header -->
                    <!-- form start -->


                    {{ form_start(f) }}
                    <div class="box-body">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Date Debut:</label>

                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>

                            {{ form_widget(f.dateDebut , { 'attr': { 'placeholder': 'dateDebut'}}) }}
                        </div>
                        <div class="form-group">
                            <label>Date Fin:</label>

                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            {{ form_widget(f.dateFin , { 'attr': { 'placeholder': 'dateFin'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">lieu</label>
                            {{ form_widget(f.lieu , { 'attr': { 'placeholder': 'lieu'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">time</label>
                            {{ form_widget(f.time , { 'attr': { 'placeholder': 'time'} }) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">nbrPlace</label>
                            {{ form_widget(f.nbrPlace , { 'attr': { 'placeholder': 'nbrPlace'} }) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">typeTheme</label>
                            {{ form_widget(f.typeTheme , { 'attr': { 'placeholder': 'titre'}}) }}
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        {{ form_widget (f.Ajouter) }}
                    </div>

                    {{ form_end(f) }}
                </div><!-- /.box -->
            </div>
        </div>
            </div>
        </div>
    </section>



{% endblock %}



