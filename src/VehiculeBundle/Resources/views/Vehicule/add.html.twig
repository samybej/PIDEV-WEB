{% extends 'back.html.twig' %}
{% block body %}
    {{ parent() }}

    <!DOCTYPE html>
    <html>
    <head>
    <link href="https://bootswatch.com/yeti/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Ajouter véhicule</h3>
                </div><!-- /.box-header -->
                <!-- form start -->


                {{ form_start(f) }}
                <div class="box-body">
                    <div class="form-group">
                        <label for="imm">Immatriculation</label>
                        {{ form_widget(f.immatriculation , {'id':'imm', 'attr': { 'placeholder': 'Immatriculation' ,'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="ass">Numéro assurance</label>
                        {{ form_widget(f.numeroAssurance , { 'id':'ass', 'attr': { 'placeholder': 'Numéro assurance'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="marque">Marque</label>
                        {{ form_widget(f.marque , { 'attr': { 'placeholder': 'Marque'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="type">Type</label>
                        {{ form_widget(f.type , { 'attr': { 'class':'form-control' , 'placeholder': 'Type'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="etat">Etat</label>
                        {{ form_widget(f.etat , { 'attr': { 'class':'form-control' , 'placeholder': 'Etat'} }) }}
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    {{ form_widget (f.Ajouter) }}
                </div>

                {{ form_end(f) }}
            </div><!-- /.box -->
        </div>
    </div>
</section>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/additional-methods.min.js"></script>
<script src="https://cdn.rawgit.com/PascaleBeier/bootstrap-validate/v2.2.0/dist/bootstrap-validate.js" ></script>
<script>
    bootstrapValidate('#imm','regex:^([0-9]{3})Tunis([0-9]{4})$:Immatriculation doit être 000Tunis0000')
    bootstrapValidate('#ass','numeric:entrez une valeur numérique')

</script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/additional-methods.min.js"></script>




</body>
</html>







{% endblock %}