{% extends "ReclamationBundle:Default:index.html.twig" %}
{% block body %}

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Modifier Reclamation</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->


                    {{ form_start(f) }}
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">note</label>
                            {{ form_widget(f.note , { 'attr': { 'placeholder': 'note'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">idChauffeur</label>
                            {{ form_widget(f.idChauffeur , { 'attr': { 'placeholder': 'idChauffeur'}}) }}
                        </div>



                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        {{ form_widget (f.Ajouter) }}
                    </div>

                    {{ form_end(f) }}
                </div><!-- /.box -->
            </div>
        </div>
    </section>
{% endblock %}